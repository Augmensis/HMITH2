<% title 'Viewed Listings' %>

<% unless @guesses.blank? -%>
  <div>
    Number of guesses: <%= @guesses.size %><br />
    Successful guesses: <%= @guesses.select(&:successful).size %>
  </div>
  <table>
    <th>Property Id</th><th>Actual Price</th><th>Your got it...</th><th>Date</th><th>Image</th>
    <% @guesses.each do |guess| -%>
      <tr>
        <td><%= link_to guess.listing_id, "http://www.zoopla.co.uk/for-sale/details/#{guess.listing_id}" %></td>
<td><%= link_to number_to_currency(guess.listing_price, precision: 0, unit: "Â£"), "http://www.zoopla.co.uk/for-sale/details/#{guess.listing_id}" %></td>
        <% if guess.successful == true %>
          <td><%= link_to "Right", "http://www.zoopla.co.uk/for-sale/details/#{guess.listing_id}" %></td>
        <% else -%>
          <td><%= link_to "Wrong", "http://www.zoopla.co.uk/for-sale/details/#{guess.listing_id}" %></td>
        <% end -%>
        <td><%= link_to guess.created_at.strftime("%d/%b/%Y"), "http://www.zoopla.co.uk/for-sale/details/#{guess.listing_id}" %></td>
        <td><%= image_tag(guess.image_url, :alt => "Missing Image") %></td>
      </tr>
    <% end -%>
  </table>
<% else  -%>
  <p>You have no viewed listings.</p>
<% end -%>
