<% title 'Sign In' -%>
<%= form_tag session_path do -%>
  <div class="form-group">
    <%= label_tag :email -%>
    <%= email_field_tag :email, params[:email], required: true, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password -%>
    <%= password_field_tag :password, nil, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
    <%= link_to 'Sign Up', sign_up_path %>
  </div>
<% end -%>
